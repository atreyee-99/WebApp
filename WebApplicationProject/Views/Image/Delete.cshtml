@using WebApplicationProject.Models;
@model Image
@{
    ViewData["Title"] = "Delete Image";
}

<div class="row d-flex align-items-center justify-content-center border border-dark p-5 rounded-top">
    <div class="col-4">
        <h2>Delete Image</h2>
    </div>

    <p>Are you sure you want to delete this image?</p>

    <img src="data:image/png;base64,@Convert.ToBase64String(Model.ImageData)" alt="@Model.FileName" class="img-thumbnail" width="400" height="300" />

    <form asp-action="Delete" asp-controller="Image" method="post">
        <input type="hidden" asp-for="Id"/>
        <div class="form-group">
            <button type="submit" class="btn btn-danger">Delete</button>
            <a asp-action="Index" asp-controller="Image" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>